# Copy this file to .env.local and fill in your actual values

# ================================
# SUPABASE CONFIGURATION
# ================================
# Get these from your Supabase project settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Supabase Storage S3 (for file uploads)
SUPABASE_S3_ACCESS_KEY_ID=your_s3_access_key_id_here
SUPABASE_S3_SECRET_ACCESS_KEY=your_s3_secret_access_key_here
SUPABASE_STORAGE_REGION=us-east-1


# ================================
# NEXTAUTH CONFIGURATION
# ================================
# For local development, use http://localhost:3000
# For production, use your actual domain (e.g., https://yourdomain.com)
NEXTAUTH_URL=http://localhost:3000
# Generate a random secret: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here

# ================================
# GOOGLE OAUTH (for user authentication)
# ================================
# Get these from Google Cloud Console > APIs & Services > Credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ================================
# GOOGLE DRIVE API (for document storage)
# ================================
# These can be the same as Google OAuth credentials or separate
GOOGLE_DRIVE_CLIENT_ID=your_google_drive_client_id_here
GOOGLE_DRIVE_CLIENT_SECRET=your_google_drive_client_secret_here
# For local development
GOOGLE_DRIVE_REDIRECT_URI=http://localhost:3000/api/auth/google-drive/callback

# ================================
# SUPABASE STORAGE S3 (for file uploads)
# ================================
# Get these from Supabase project settings > Storage > S3 Access Keys
SUPABASE_S3_ACCESS_KEY_ID=your_s3_access_key_id_here
SUPABASE_S3_SECRET_ACCESS_KEY=your_s3_secret_access_key_here
SUPABASE_STORAGE_REGION=us-east-1

# ================================
# ENVIRONMENT
# ================================
NODE_ENV=development
